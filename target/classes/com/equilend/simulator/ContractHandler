package com.equilend.simulator;

public class ContractHandler implements EventHandler {
    private Event event;
    private Configurator rules;
    
    public Token getToken(){
        return new Token();
    }
    public ContractHandler(Event e, Configurator rules){
        this.event = e;
        this.rules = rules;
    }

    public void run(){
        System.out.println(Thread.currentThread().getName() + " acquires token");
        System.out.println(Thread.currentThread().getName() + " approves or declines contract");
        String uri = event.getResourceUri();
        String[] arr = uri.split("/");
        String contractId = arr[arr.length-1];
    }    
}
